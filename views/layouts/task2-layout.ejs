<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,
				initial-scale=1.0">
    <title>Task</title>
    <link rel="stylesheet" href="/stylesheet/task1.css" />

</head>

<body>
    <header>

        <div class="logosec">
            <div class="logo">I-Sign</div>
        </div>

        <div class="profilee-wrapper">
            <div class="profilee">
                <img src="/asset/Profilee.png" class="dpicn" alt="dp">
            </div>
        </div>
    </header>
    <div class="main-container">
        <div class="navcontainer">
            <nav class="nav">
				<div class="nav-upper-options">
					<div class="nav-option option1">
						<img src="/asset/Home.png" class="nav-img" alt="dashboard">
						<a class="=navigasi" href="/">
							<h3> Dashboard</h3>
						</a>

					</div>

					<div class="nav-option option2">
						<img src="/asset/Profile.png" class="nav-img" alt="profile">
						<a href="/profil">
							<h3>Profile</h3>
						</a>

					</div>

					<div class="nav-option option3">
						<img src="/asset/Paper.png" class="nav-img" alt="task">
						<a href="/pengumuman">
							<h3>Task</h3>
						</a>


					</div>


					<div class="nav-option option4">
						<img src="/asset/Notification.png" class="nav-img" alt="notification">
						<a href="/notifikasi">
							<h3>Notification</h3>
						</a>


					</div>
				</div>
			</nav>
        </div>
        <div class="container">
            <div class="main-body">
                <div class="pill-nav">
                    <a href="/pengumuman">
                        <h3>Upcoming</h3>
                    </a>
                    <a class="active" href="/submission">
                        <h3>Completed</h3>
                    </a>
                    <a class="split" href=";add-form">
                        <h3>New Task</h3>
                    </a>
                </div>
                <div class="task-body">
                    <% if(data.length> 0){
                        for(var i = 0; i < data.length; i++){%>
                    <div class="task-upcoming">
                        <h3 class="t-op"><%= data[i].title%></h3>
                        <p>
                            From : <%= data[i].username%> <br />
                            Deadline : <%= moment(data[i].deadline). format("DD-MM-YYYY")%> 
                        </p>
                        <br>
                    </div>
                    <%}} else { %>

                    <div class="task-upcoming">
                        <h3 class="t-op">Belum ada notifikasi</h3>
        
                        <br>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>